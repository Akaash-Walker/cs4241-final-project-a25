{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src/server",
    "outDir": "dist/server",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["src/server/**/*.ts"]
}